<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yuzhai.yuzhaiwork">

    <!--权限-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_chinese_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--登录界面-->
        <activity
            android:name="com.yuzhai.ui.LoginActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--注册界面-->
        <activity
            android:name="com.yuzhai.ui.RegisterActivity"
            android:launchMode="singleTask" />
        <!--主界面-->
        <activity
            android:name="com.yuzhai.ui.MainActivity"
            android:launchMode="singleTask" />
        <!--忘记密码界面-->
        <activity
            android:name="com.yuzhai.ui.ForgetPswdActivity"
            android:launchMode="singleTask" />
        <!--类别界面-->
        <activity
            android:name="com.yuzhai.ui.CategoryActivity"
            android:launchMode="singleTask" />
        <!--广告界面-->
        <activity
            android:name="com.yuzhai.ui.AdvertiseActivity"
            android:launchMode="singleTask" />
    </application>

</manifest>