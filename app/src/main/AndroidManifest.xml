<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yuzhai.yuzhaiwork">

    <!-- 权限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 申明权限 操作SD卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 申请拍照权限 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.yuzhai.global.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_chinese_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 主界面 -->
        <activity
            android:name="com.yuzhai.ui.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 登录界面 -->
        <activity
            android:name="com.yuzhai.ui.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <!-- 注册界面 -->
        <activity
            android:name="com.yuzhai.ui.RegisterActivity"
            android:screenOrientation="portrait" />
        <!-- 忘记密码界面 -->
        <activity
            android:name="com.yuzhai.ui.ForgetPswdActivity"
            android:screenOrientation="portrait" />
        <!-- 类别界面 -->
        <activity
            android:name="com.yuzhai.ui.CategoryActivity"
            android:screenOrientation="portrait" />
        <!-- 广告界面 -->
        <activity
            android:name="com.yuzhai.ui.AdvertiseActivity"
            android:screenOrientation="portrait" />
        <!-- 个人信息界面 -->
        <activity
            android:name="com.yuzhai.ui.UserInfoActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.yuzhai.ui.SearchActivity"></activity>
    </application>

</manifest>