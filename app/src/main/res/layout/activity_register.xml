<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView

        android:id="@+id/imageview"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/register_imageview_logo_height" />

    <RelativeLayout
        android:id="@+id/relayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview"
        android:layout_marginLeft="@dimen/register_relativeLayout_marginLeftR"
        android:layout_marginRight="@dimen/register_relativeLayout_marginLeftR">

        <EditText
            android:id="@+id/phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/register_editable_first_marginT"
            android:background="@color/colorgary"
            android:hint="@string/phone_num"
            android:maxLength="11"
            android:inputType="phone"
            android:padding="@dimen/register_editable_middle_padding"
            android:singleLine="true" />

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_num"
            android:layout_marginTop="@dimen/register_editable_middle_marginT"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@color/colorgary"
                android:hint="@string/code"
                android:maxLength="6"
                android:padding="@dimen/register_editable_middle_padding"
                android:singleLine="true"

                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_button_code_marginL"
                android:layout_weight="2"
                android:padding="0dp"
                android:text="@string/get_code" />
        </LinearLayout>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout"
            android:layout_marginTop="@dimen/register_editable_middle_marginT"
            android:background="@color/colorgary"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="@dimen/register_editable_middle_padding"
            android:maxLength="16"
            android:singleLine="true" />

        <EditText
            android:id="@+id/affirmPsw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginTop="@dimen/register_editable_middle_marginT"
            android:background="@color/colorgary"
            android:hint="@string/affirm_psw"
            android:inputType="textPassword"
            android:padding="@dimen/register_editable_middle_padding"
            android:maxLength="16"
            android:singleLine="true" />

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/affirmPsw"
            android:layout_marginTop="@dimen/register_button_register_paddingT"
            android:background="@drawable/register_button_registerlogin_style"
            android:text="@string/register"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/register_button_register_textsize" />
    </RelativeLayout>


    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/relayout1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/register_textview_last_marginB"
        android:text="@string/login"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/register_textview_last_textsize"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/relayout1"
        android:layout_marginBottom="@dimen/register_textview_last_marginB"
        android:text="@string/stroll"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/register_textview_last_textsize" />


</RelativeLayout>
