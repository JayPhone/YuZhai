<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    tools:context="com.yuzhai.ui.LoginActivity">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_imageview_logo_height" />

    <RelativeLayout
        android:id="@+id/relayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview"
        android:layout_marginLeft="@dimen/login_relativeLayout_marginLeftR"
        android:layout_marginRight="@dimen/login_relativeLayout_marginLeftR">

        <EditText
            android:id="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_editable_first_marginT"
            android:background="@color/colorgary"
            android:hint="@string/username"
            android:inputType="number"
            android:maxLength="11"
            android:padding="@dimen/login_editable_middle_padding"
            android:singleLine="true" />

        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_marginTop="@dimen/login_editable_second_marginT"
            android:background="@color/colorgary"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:padding="@dimen/login_editable_middle_padding"
            android:singleLine="true" />


    </RelativeLayout>

    <Button
        android:id="@+id/login_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relayout1"
        android:layout_marginLeft="@dimen/login_relativeLayout_marginLeftR"
        android:layout_marginRight="@dimen/login_relativeLayout_marginLeftR"
        android:layout_marginTop="@dimen/login_button_marginT"
        android:background="@drawable/register_button_registerlogin_style"
        android:text="@string/login"
        android:textColor="@color/colorwhite"
        android:textSize="@dimen/login_button_login_textsize" />


    <TextView
        android:id="@+id/register_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/login_textview_last_marginB"
        android:layout_marginLeft="@dimen/login_relativeLayout_marginLeftR"
        android:text="@string/login_register"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/login_textview_last_textsize" />

    <TextView
        android:id="@+id/forget_pswd_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/login_textview_last_marginB"
        android:layout_toRightOf="@+id/register_nav"
        android:text="@string/forget_psw"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/login_textview_last_textsize" />

    <TextView
        android:id="@+id/home_page_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/login_textview_last_marginB"
        android:layout_marginRight="@dimen/login_relativeLayout_marginLeftR"
        android:text="@string/register_stroll_textview"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/login_textview_last_textsize" />

</RelativeLayout>
