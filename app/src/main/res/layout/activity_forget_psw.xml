<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yuzhai.ui.ForgetPswActivity">

    <RelativeLayout
        android:id="@+id/forget_pswd_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/mainColor">

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="忘记密码"
            android:textColor="@color/color_white"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/warp_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forget_pswd_toolbar"
        android:layout_marginLeft="@dimen/register_relativeLayout_marginLeftR"
        android:layout_marginRight="@dimen/register_relativeLayout_marginLeftR"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:id="@+id/user_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/register_editable_first_marginT"
            android:background="@drawable/edit_text_bg"
            android:gravity="center_vertical"
            android:padding="@dimen/register_editable_middle_padding">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/user" />

            <EditText
                android:id="@+id/phone_num"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/user_image"
                android:background="@null"
                android:hint="@string/register_phone_num_hint"
                android:inputType="number"
                android:lines="1"
                android:maxLength="11"
                android:selectAllOnFocus="true"
                android:textColor="@color/color_8c8c8c"
                android:textColorHint="@color/color_cecece" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/verify_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name_layout"
            android:layout_marginTop="@dimen/register_editable_middle_marginT"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@drawable/edit_text_bg"
                android:gravity="center_vertical"
                android:padding="@dimen/register_editable_middle_padding">

                <ImageView
                    android:id="@+id/verify_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/verify" />

                <EditText
                    android:id="@+id/code_field"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/verify_image"
                    android:background="@null"
                    android:hint="@string/register_code_hint"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="6"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/color_8c8c8c"
                    android:textColorHint="@color/color_cecece" />
            </RelativeLayout>

            <Button
                android:id="@+id/code_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="@dimen/register_button_code_marginL"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:background="@drawable/code_button_style"
                android:padding="0dp"
                android:text="@string/register_get_code_button"
                android:textColor="@color/color_white" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/pswd_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verify_layout"
            android:layout_marginTop="@dimen/register_editable_middle_marginT"
            android:background="@drawable/edit_text_bg"
            android:gravity="center_vertical"
            android:padding="@dimen/register_editable_middle_padding">

            <ImageView
                android:id="@+id/pswd_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/pswd_image"
                android:background="@null"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="16"
                android:selectAllOnFocus="true"
                android:textColor="@color/color_8c8c8c"
                android:textColorHint="@color/color_cecece" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pswd_layout"
            android:layout_marginTop="@dimen/register_editable_middle_marginT"
            android:background="@drawable/edit_text_bg"
            android:gravity="center_vertical"
            android:padding="@dimen/register_editable_middle_padding">

            <ImageView
                android:id="@+id/comfirm_pswd_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/cfm_psw" />

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/comfirm_pswd_image"
                android:background="@null"
                android:hint="@string/register_comfirm_pswd_hint"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="16"
                android:selectAllOnFocus="true"
                android:textColor="@color/color_8c8c8c"
                android:textColorHint="@color/color_cecece" />
        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/change_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/warp_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style"
        android:text="确认修改"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/register_button_register_textsize" />

    <TextView
        android:id="@+id/login_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/register_textview_last_marginB"
        android:text="登录"
        android:textColor="@drawable/buttom_text_style"
        android:textSize="@dimen/register_textview_last_textsize" />

</RelativeLayout>
