<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/rec_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yuzhai.view.CircleImageView
            android:id="@+id/rec_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/test1"
            app:border_color="@color/color_white" />

        <TextView
            android:id="@+id/rec_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rec_header"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/rec_header"
            android:background="@drawable/rec_bg"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4dp"
            android:maxWidth="250dp"
            android:textColor="@color/color_212121"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/send_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yuzhai.view.CircleImageView
            android:id="@+id/send_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/test2"
            app:border_color="@color/color_white" />

        <TextView
            android:id="@+id/send_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/send_header"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/send_header"
            android:background="@drawable/send_bg"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4dp"
            android:maxWidth="250dp"
            android:textColor="@color/color_212121"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>


