<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrap_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recyclerview_item_pressed"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态:"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/status_title"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/status_title"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/order_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/order_id"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/order_id"
            android:text="订单号:"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/limit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_title"
            android:layout_marginTop="5dp"
            android:text="期限:"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/limit_title"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/limit_title"
            android:textColor="@color/colorBlack" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_f1f0f0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/type_image"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/game" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/type_image"
            android:ellipsize="end"
            android:lines="4"
            android:textColor="@color/colorBlack"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="￥"
            android:textColor="@color/mainColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/price_title"
            android:layout_toRightOf="@+id/price_title"
            android:text="100"
            android:textColor="@color/mainColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_title"
            android:layout_marginTop="5dp"
            android:text="日期:"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/date_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/date_title"
            android:textColor="@color/colorBlack" />

        <Button
            android:id="@+id/cancel_order"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/date_title"
            android:layout_alignParentRight="true"
            android:background="@drawable/order_item_button_style"
            android:text="取消订单"
            android:textColor="@color/colorBlack" />

    </RelativeLayout>
</LinearLayout>