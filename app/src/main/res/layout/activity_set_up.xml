<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f1f0f0"
    android:orientation="vertical"
    tools:context="com.yuzhai.ui.SetUpActivity">

    <RelativeLayout
        android:id="@+id/set_up_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/mainColor">

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/color_white"
            android:textSize="20dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/account_safe"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/set_up_toolbar"
        android:layout_marginTop="5dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="  账户安全"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/feed_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/account_safe"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="  意见反馈"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/clear_cache"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/feed_back"
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="  清除缓存"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/clear_cache"
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="  关于版本"
        android:textSize="16dp" />


</RelativeLayout>
